						from
						Invoice__c
						where Opportunity__c =: strOpportunityID and  Status__c != 'Archived'
						order by CreatedDate desc];

						selectedId = objInvoice.id;
						selectedInvoiceDetails();
						// List<Accrual__c> lstAccural = [Select id, name,
						// Job__c,
						// Status__c,
						// Accrual_Amount__c
						// From
						// Accrual__c
