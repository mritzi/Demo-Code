						// for(Accrual__c objAccural: lstAccural){

						// if(objAccural.Status__c.equalsIgnoreCase('Approved')){
						// objAccural.Status__c = 'Reversed By Invoice';
						// }else{
						// objAccural.Status__c = 'Rejected';
